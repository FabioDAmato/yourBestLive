<div class="container" style="text-align: center;">

<h2 style="text-align: left;">Registrazione</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div style="text-align: left;">
  <div class="field">
    <%= f.label :nome %><br />
    <%= f.text_field :nome, autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :cognome %><br />
    <%= f.text_field :cognome, autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caratteri minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "conferma password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  </div>

  <div class="actions">
    <button type="submit" class="waves-effect waves-light btn-large red darken-4" style="margin-top: 10px">Registrati</button>
  </div>
<% end %>

<div style="margin-top: 5px">
<%= render "devise/shared/links"%>