<h1>Lista locali</h1>

<div class="columns border-top">

	<div class="column is-2 bg-light">
	    <div class="pl3 pr1">
	      	<%= form_tag locali_index_url, :method => 'get' do %>
				<%= text_field_tag :search, params[:search], :placeholder => "Ricerca locale"%>
				<%= text_field_tag :citta, @citta, :placeholder => "Ricerca cittÃ  del locale"%>
				<%= submit_tag "Ricerca" %>
			<% end %>
	    </div>
	</div>

	<div class="column is-9 pl6">
		<% @locale.each do |l|  %>
		<div class="columns border-bottom pt4">
	    	<div class="column is-1">
	    		<% if l.images.attached? %>
		        	<%= image_tag(l.images[0], style:'width: 100; height: 100')  %>
		        <% end %>
		    </div>
			<div class="column is-8">
			    <h3 class="title is-4 index-title"><%= l.nlocale %></h3>
			    <ul><p> <%= l.indirizzo %> </p></ul>
			    <div class="pv2 f6">
			        <%= link_to "Vai ai dettagli", locali_path(id: l.id), :action => "show" %>
			    </div>
			</div>
	    </div>
	    <% end %>
	</div>
</div>

<style>
.app-fab--absolute {
  position: fixed;
  bottom: 1rem;
  right: 1rem;
}

@media(min-width: 1024px) {
   .app-fab--absolute {
    bottom: 3.5rem;
    right: 3.5rem;
  }
}
</style>

<button class="mdc-fab app-fab--absolute" aria-label="Favorite"
onclick="window.location='/locali/new';" /> 
  <span class="material-icons mdc-fab__icon">add</span>
  <span class="mdc-fab-container-color($red)"></span>
</button>